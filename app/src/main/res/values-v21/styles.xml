<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="GruppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/teal</item>
        <item name="colorPrimaryDark">@color/dark_teal</item>
        <item name="colorAccent">@color/salmon</item>
        <item name="android:colorBackground">@color/dark_gray</item>
        <item name="android:navigationBarColor">@color/teal</item>
        <item name="android:colorForeground">@color/mustard</item>
        <!-- Window transitions. not working :( -->
        <item name="android:windowActivityTransitions">true</item>

        <!-- specify enter and exit transitions -->
        <item name="android:windowEnterTransition">@android:transition/explode</item>
        <item name="android:windowExitTransition">@android:transition/explode</item>

        <!-- specify shared element transitions -->
        <item name="android:windowSharedElementEnterTransition">@android:transition/explode</item>
        <item name="android:windowSharedElementExitTransition">@android:transition/explode</item>
    </style>
</resources>